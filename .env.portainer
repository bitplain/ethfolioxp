# Database service
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=portfolio

# Runtime URLs
DATABASE_URL=postgresql://postgres:postgres@db:5432/portfolio
NEXTAUTH_URL=http://localhost:3000

# Secrets (replace with strong values)
NEXTAUTH_SECRET=replace-with-nextauth-secret
KEYS_ENCRYPTION_SECRET=replace-with-key-encryption-secret
MORALIS_API_KEY=replace-with-moralis-api-key

# External API configuration
ETHERSCAN_API_BASE=https://api.etherscan.io/v2/api
ETHERSCAN_CHAIN_ID=1
COINGECKO_API_BASE=https://api.coingecko.com/api/v3

# Pricing/job settings
PRICE_BUCKET_SECONDS=3600
PRICE_FALLBACK_MAX_AGE_SEC=259200

# HTTP client tuning
HTTP_TIMEOUT_MS=8000
HTTP_RETRY_COUNT=2
HTTP_RETRY_BASE_MS=250
HTTP_CACHE_TTL_MS=0
